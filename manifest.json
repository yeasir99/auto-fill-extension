{
  "manifest_version": 3,
  "name": "AutoForm Filler",
  "version": "1.0",
  "description": "Login, fetch server data, persist a selection, and autofill forms in the active tab.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://www.mdalfahad.us/*",
    "https://account.kdp.amazon.com/*",
    "https://www.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-1.jpg",
    "48": "icons/icon-2.jpg",
    "128": "icons/icon-3.png"
  }
}
